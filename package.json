{
  "name": "bun-plugin-stx",
  "type": "module",
  "version": "0.0.0",
  "description": "A Bun plugin that allows for using Laravel Blade-like syntax.",
  "author": "Chris Breuer <chris@stacksjs.org>",
  "license": "MIT",
  "homepage": "https://github.com/stacksjs/bun-plugin-stx#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stacksjs/bun-plugin-stx.git"
  },
  "bugs": {
    "url": "https://github.com/stacksjs/bun-plugin-stx/issues"
  },
  "keywords": [
    "blade",
    "css",
    "bun",
    "stx",
    "plugin",
    "generation",
    "typescript",
    "stacks"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": {
      "import": "./dist/*"
    }
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["LICENSE.md", "README.md", "dist"],
  "scripts": {
    "build": "bun build.ts",
    "lint": "bunx eslint .",
    "lint:fix": "bunx eslint . --fix",
    "fresh": "bunx rimraf node_modules/ bun.lock && bun i",
    "changelog": "bunx changelogen --output CHANGELOG.md",
    "prepublishOnly": "bun run build",
    "release": "bun run changelog && bunx bumpp package.json --all",
    "test": "bun test",
    "typecheck": "bun tsc --noEmit"
  },
  "devDependencies": {
    "@stacksjs/eslint-config": "^4.10.2-beta.3",
    "@types/bun": "^1.2.10",
    "bumpp": "^10.0.1",
    "bun-plugin-dtsx": "^0.21.9",
    "changelogen": "^0.6.1",
    "lint-staged": "^15.5.1",
    "simple-git-hooks": "^2.13.0",
    "typescript": "^5.8.3"
  },
  "simple-git-hooks": {
    "pre-commit": "bun lint-staged"
  },
  "lint-staged": {
    "*.{js,ts}": "bunx eslint . --fix"
  }
}
